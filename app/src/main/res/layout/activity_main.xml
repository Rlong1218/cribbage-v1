<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  android:background="@drawable/background_main">

  <ImageView
    android:src="@drawable/cribbage_pegs"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintBottom_toTopOf="@id/novice"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    android:layout_marginBottom="60dp"
    android:layout_marginStart="20dp"/>

  <ImageView
    android:id="@+id/title"
    android:src="@drawable/title"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="50dp"/>

  <Button
    android:id="@+id/novice"
    android:layout_width="250dp"
    android:layout_height="60dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="140dp"
    android:text="@string/novice"
    android:textAllCaps="false"
    android:textSize="30sp"/>

  <Button
    android:id="@+id/intermediate"
    android:layout_width="250dp"
    android:layout_height="60dp"
    app:layout_constraintTop_toBottomOf="@id/novice"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:text="@string/intermediate"
    android:textAllCaps="false"
    android:textSize="30sp"/>

  <Button
    android:id="@+id/advanced"
    android:layout_width="250dp"
    android:layout_height="60dp"
    app:layout_constraintTop_toBottomOf="@id/intermediate"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="20dp"
    android:text="@string/advanced"
    android:textAllCaps="false"
    android:textSize="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>